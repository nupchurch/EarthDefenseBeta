<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:id="@+id/MainLayout" android:layout_width="fill_parent">

	<FrameLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/GameLayout"></FrameLayout>


	<RelativeLayout android:id="@+id/focuscircle" android:background="@drawable/selection" android:layout_width="fill_parent" android:layout_height="fill_parent" android:visibility="invisible"></RelativeLayout><LinearLayout android:id="@+id/LinearLayout01"
		android:orientation="horizontal"
		android:layout_width="fill_parent" android:background="#00000000" android:layout_height="40dip">
		
		<TextView android:id="@+id/TextView01" android:text="text area 1" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#FFFFFF"
			android:shadowColor="#000000" android:background="#00FFFFFF"
			android:shadowDy="3" android:shadowDx="3" android:shadowRadius="5"
			android:layout_height="fill_parent"
			></TextView>
		<TextView android:id="@+id/TextView02" 
			android:text="text area 2" android:layout_weight="1"
			android:layout_width="fill_parent" android:textColor="#FFFFFF"
			android:shadowColor="#000000" android:background="#00FFFFFF"
			android:shadowDy="3" android:shadowDx="3" android:shadowRadius="5"
			android:layout_height="fill_parent"
			></TextView>
		<TextView android:id="@+id/TextView03" 
			android:text="text area 3" android:layout_width="fill_parent"
			android:layout_weight="1" android:textColor="#FFFFFF"
			android:shadowColor="#000000" android:background="#00FFFFFF"
			android:shadowDy="3" android:shadowDx="3" android:shadowRadius="5"
			android:layout_height="fill_parent"
			></TextView>
	</LinearLayout>


</FrameLayout>


